double catetoA;  
double catetoB;   
double hipot;       
System.out.println("Digite o Cateto A abaixo:");    
catetoA = in.nextDouble( );  
System.out.println("Digite o Cateto B abaixo:");  
catetoB = in.nextDouble( );  
System.out.println("Digite a Hipotenusa abaixo:");   
hipot = in.nextDouble();       
if (catetoA == catetoB && catetoA == hipot) {        
System.out.println("Esse triângulo é Equilatero");    
}     
if (catetoA != catetoB && catetoA != hipot && catetoB != hipot){       
System.out.println("Esse triângulo é Escaleno");    
}      
if (catetoA == catetoB && catetoA != hipot){        
System.out.println("Esse triângulo é Isósceles");    
}              
//identificar se é adult, crian,idoso.      
int id;      
System.out.println("Digite a idade a seguir:");      
id = in.nextInt();   
if (id <3 ){       
System.out.println( id + " anos é a idade de um bebê"); 
}else if (id <12){     
System.out.println( id + " anos é a idade de uma criança" );      
}else if (id<21){  
System.out.println( id + " anos é a idade de um adolescente");    
}else if (id<65){   
System.out.println(id + " anos é a idade de um adulto");      
}else {            
System.out.println(id + " anos é a idade de um idoso");      
}                //contador     
System.out.println("Digite o número a ser contado:");  
int cont = 1;        int max = 0;    
max = in.nextInt();       
while(cont<=max){        
System.out.println(cont);      
cont++;        }               
//multiplicação com + e -      
int nmra = 0;      
int nmrb = 0;        
int cont1 = 0;       
int result = 0;     
int sinais = 0;     
System.out.println("Digite o número:");        
nmra = in.nextInt();       
System.out.println("Digite o número de vezes: ");  
nmrb = in.nextInt();      
if(nmra<0){      
sinais++;         
nmra = 0 - nmra;  
}       
if(nmrb<0){  
sinais++;  
nmrb = 0 - nmrb; 
}     
while(cont1<nmra){ 
result = nmrb + result;
cont1++;   
}if(sinais==1){         
result = 0 - result;   
}          
System.out.println("Total:" + result); 
//Divisão com + e -   
int dividendo = 0;      
int divisor = 0;     
int result13 = 0;      
System.out.println("Digite o numero a ser divido:"); 
dividendo = in.nextInt();  
System.out.println("Digite o divisor:");      
divisor = in.nextInt();     
while(dividendo >= divisor){     
dividendo = dividendo - divisor;       
result13++;     
}      
System.out.println("resultado: " + result13);
//Identificar o maior número num Vetor!!    
int [] vet = { 5 , 8 , 11 , 1 , 3 , 15 , 9};//Vetor   
int posvet = 0;//posição do valor
int contvet = 1;      
//nome do vetor     
while(contvet < vet.length){      
//nome do vetor e contador  / nome do vetor e posição  
if(vet[contvet] > vet[posvet]){   
posvet = contvet; //posição igual a contador         
}          
contvet++;                     
}              
//Imprimir valores do vetor   
int[] vetor = {3,4,5};    
for(int i = 0; i < vetor.length; i++){   
System.out.println(vetor[i]);
}               
int nmra1 = in.nextInt(); 
int nmrb1 = in.nextInt();  
for(int i = 0; i < nmrb; i++){     
}           
int cont2 = 0;   
int result2 = 0;  
int sinais2 = 0;  
System.out.println("Digite o número:");  
System.out.println("Digite o número de vezes: ");  
if(nmra1<0){      
sinais2++;       
nmra1 = 0 - nmra;  
}   
if(nmrb1<0){  
sinais2++;     
nmrb1 = 0 - nmrb1; 
} 
while(cont2<nmra1){  
result2 = nmrb1 + result2;   
cont2++;  
}if(sinais2==1){   
result2 = 0 - result2;    
}       
System.out.println(result2);   
}   
//Media inicio! 
public static void mainmedia(String[] args) {  
Scanner in = new Scanner(System.in);  
System.out.println("Digite um número:"); 
double num1 = in.nextDouble();   
System.out.println("Digite outro número:");
double num2 = in.nextDouble();    
double calculo = media(num1, num2);   
}      
public static double media(double x, double y){  
double resp = (x+y)/2;   
return resp;   
}   
//Media fim!  
}    
