//Tarifa de Energia      
double tarifa1 = 2;        
double consumo1 = 0;     
double desconto1 = 0.3;   
double valorDesconto1 = 0;   
double valorPagar1 = 0;        
System.out.println("Digite o Consumo:");  
consumo1 = in.nextDouble();     
if(consumo1<100){       
valorDesconto1 = tarifa1*consumo1*desconto1; 
System.out.println("Entrou no IF");      
}       
valorPagar1 = tarifa1 * consumo1 - valorDesconto1;
System.out.println("Valor a pagar: " + valorPagar1);
//Tarifa com Descontos e taxas          
double tarifa2 = 2;       
double consumo2 = 0;      
double desconto2 = 0.3;  
double valorDesconto2 = 0;      
double valorPagar2 = 0;   
double taxaDeUso = 0.5;      
System.out.println("Digite o consumo:"); 
consumo2 = in.nextDouble();     
valorPagar2 = consumo2 * tarifa2;    
if(consumo2<100) {        
valorDesconto2 = tarifa2 * consumo2 * desconto2;    
}      
if(consumo2>300) {    
valorDesconto2 = tarifa2 * consumo2 * taxaDeUso;    
}        
System.out.println("Valor a pagar: " + valorPagar2 + valorDesconto2);    
//tarifa completa       
double tarifa3 = 2;      
double consumo3 = 0;    
double desconto3 = 0.3;   
double valorPagar3 = 0; 
double taxaDeUso3 = 0.5;  
double valorDesconto3 = 0;
double valorAumento3 = 0;    
System.out.println("Digite o consumo:"); 
consumo3 = in.nextDouble();  
valorPagar3 = consumo3 * tarifa3; 
if(consumo3<100) {
valorDesconto3 = valorPagar3 * desconto3  ; 
System.out.println("Desconto de uso");    
valorPagar3 = valorPagar3 - valorDesconto3;      
}          
if(consumo3>300) {    
valorAumento3 = valorPagar3 * taxaDeUso3;     
System.out.println("Juros de uso");     
valorPagar3 = valorPagar3 + valorAumento3;       
}       
System.out.println("Valor a Pagar: " + valorPagar3);  
